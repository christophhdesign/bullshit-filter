{
  "manifest_version": 3,
  "name": "Bullshit Filter",
  "version": "1.0.0",
  "description": "Hide posts containing filtered keywords on selected sites.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bullshit Filter"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
